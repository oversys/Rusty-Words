{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": [
		"main"
	],
	"permissions": [
		"core:default",
		"opener:default",
		"process:default",
		"process:allow-restart",
		"fs:allow-write",
		"fs:allow-app-write",
		"fs:allow-app-write-recursive",
		"fs:allow-appcache-write",
		"fs:allow-appcache-write-recursive",
		"fs:allow-create",
		"fs:default",
		"dialog:default",
		"opener:allow-open-url",
		"opener:default",
		"opener:default",
		"os:allow-platform",

		{
			"identifier": "fs:allow-write",
			"allow": [
				{
					"path": "$HOME/Download/*"
				}
			]
		},
		{
			"identifier": "fs:allow-create",
			"allow": [
				{
					"path": "$HOME/Download/*"
				}
			]
		},
		{
			"identifier": "fs:allow-read-file",
			"allow": [
				{
					"path": "$HOME/Download/*"
				}
			]
		}
	]
}
